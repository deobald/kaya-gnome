{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "build/tsc",
    "rootDir": "src",
    "strict": true,
    "noEmitOnError": true,
    "allowJs": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "types",
        "gi-types"
      ]
    },
    "typeRoots": [
      "gi-types",
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

  },
  "include": [
    "gi-types/gi.d.ts",
    "types/ambient.d.ts",
    "src/**/*.ts"
  ]
}
